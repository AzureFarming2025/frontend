{
    "compilerOptions": {
      "target": "ESNext",
      "module": "ESNext",
      "jsx": "react-jsx",
      "strict": true,
      "baseUrl": "./src",
      "paths": {
        "@api/*": ["api/*"],
        "@components/*": ["components/*"],
        "@pages/*": ["pages/*"]
      },
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
  }
  